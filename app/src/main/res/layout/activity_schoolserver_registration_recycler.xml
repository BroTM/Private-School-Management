<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/card"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/register_layout"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:id="@+id/license_image"
                        android:src="@drawable/u"/>

                    <ProgressBar
                        android:id="@+id/user_license_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:id="@+id/user_license_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_refresh_icon"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_toRightOf="@+id/register_layout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/upperlinear">
                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/btn_register_click"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/dropdown"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/student_registration_name"
                            android:text="Mg Shine Thu Lwin"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="16dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                        >
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textSize="10dp"
                            android:text="လက်ခံမည်"
                            android:elevation="4dp"
                            android:background="@drawable/allow"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:id="@+id/btn_register_confirm" />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:elevation="4dp"
                            android:textSize="10dp"
                            android:text="ပယ်ဖျက်မည်"
                            android:id="@+id/btn_register_cancel"
                            android:background="@drawable/buttondelete"
                            />
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>

























