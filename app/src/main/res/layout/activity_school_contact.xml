<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background"
    tools:context=".AboutActivity.SchoolServerContact">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/contact_toolbar"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="4dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="4dp">
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    >
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/contactlogo"
                        android:layout_marginTop="16dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contacttitle"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/contactlogo"
                        android:text="ကိုယ်ပိုင်အထက်တန်းကျောင်း"
                        android:textColor="@color/buttonbackground"
                        android:textStyle="bold"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_below="@+id/contacttitle"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:id="@+id/line"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_text"
                        android:text="ဆက်သွယ်ရန် အချက်အလက်များ "
                        android:layout_below="@+id/line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contactlinear"
                        android:layout_below="@+id/contact_text"
                        android:orientation="vertical">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:id="@+id/linear1"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="16dp"
                                android:src="@drawable/phone"
                                android:id="@+id/teacher_phoneicon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ဖုန်းခေါ်ရန် -"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="16dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/teacher_text_phone"
                                android:textColor="@color/colorPrimary"
                                android:layout_height="wrap_content"
                                android:text="09402512084"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/message_chat"
                                android:layout_marginTop="16dp"
                                android:id="@+id/teacher_messageicon"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="စာပို့ရန်-"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="16dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/teacher_text_message"
                                android:textColor="@color/colorPrimary"
                                android:text="09402512084"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="16dp"
                                android:id="@+id/teacher_emailicon"
                                android:src="@drawable/email"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="အီးမေးပို့ရန် - "
                                android:layout_marginTop="16dp"
                                android:layout_marginLeft="16dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:id="@+id/teacher_text_gamil"
                                android:textColor="@color/colorPrimary"
                                android:text="sgroup15um@gmail.com"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>