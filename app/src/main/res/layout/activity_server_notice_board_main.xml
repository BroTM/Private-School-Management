<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/card_background"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/server_notice_toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/colorPrimary"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/server_notice_toolbar"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="4dp"
                android:layout_margin="16dp"
                android:layout_centerInParent="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/server_notice_logo"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/server_title"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/server_notice_logo"
                        android:text="ကိုယ်ပိုင်ကျောင်း"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"
                        android:layout_below="@+id/server_title"
                        android:id="@+id/server_notice_line"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/server_notice_line"
                        android:textStyle="bold"
                        android:text="ကြော်ငြာသင်ပုန်း"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/server_notitle_title"  />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ခေါင်းစဉ်အားရိုက်ထည့်ပါ"
                        android:layout_below="@+id/server_notitle_title"
                        android:id="@+id/server_notice_title_hint"
                        android:layout_marginTop="16dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/server_notice_title_hint"
                        android:layout_marginTop="8dp"
                        android:id="@+id/server_notice_title_box"
                        android:background="@drawable/absent_text_style"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="အကြောင်းအရာအားရိုက်ထည့်ပါ"
                        android:layout_below="@+id/server_notice_title_box"
                        android:id="@+id/server_notice_description_hint"
                        android:layout_marginTop="16dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/server_notice_description_hint"
                        android:layout_marginTop="8dp"
                        android:id="@+id/server_notice_description_box"
                        android:background="@drawable/absent_text_style"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="တင်မည့်ပုံ"
                        android:layout_below="@+id/server_notice_description_box"
                        android:id="@+id/message_edit_title"
                        android:layout_marginTop="10dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/relative"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/message_edit_title"
                        android:background="@drawable/absent_text_style">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:id="@+id/server_notice_choose_image"
                            android:scaleType="centerInside"
                            android:src="@drawable/notice_gallery"
                            android:background="@drawable/absent_text_style" />
                    </RelativeLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="တင်မည်"
                        android:layout_below="@+id/relative"
                        android:layout_marginTop="10dp"
                        android:id="@+id/server_notice_post_button"
                        android:layout_marginBottom="4dp"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>