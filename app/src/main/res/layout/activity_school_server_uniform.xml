<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/card_background"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/school_server_uniform_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/school_server_uniform_toolbar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="32dp"
                android:id="@+id/contactlogo"
                android:elevation="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contacttitle"
                android:layout_below="@+id/contactlogo"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/buttonbackground"
                android:textStyle="bold"
                android:text="ကိုယ်ပိုင်ကျောင်း"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:id="@+id/line"
                android:background="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/contacttitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="တူညီဝတ်စုံ "
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/line"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_below="@+id/title"
                android:id="@+id/boycard"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"

                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/boy_layout"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:padding="4dp"
                    android:layout_below="@+id/contacttitle"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/boytext"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:layout_alignParentBottom="true"
                        android:background="#1A000000"
                        android:text="ယောင်္ကျားလေးအဝတ်အစား"/>
                    <ImageView android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:src="@drawable/boy"
                        android:layout_marginBottom="53dp"
                       android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:id="@+id/boy_image"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_below="@+id/boycard"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="8dp"
                app:cardElevation="4dp"
                android:layout_marginTop="16dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/girl_layout"
                    android:layout_marginLeft="8dp"
                    android:padding="4dp"
                    android:layout_marginRight="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:scaleType="fitXY"
                        android:id="@+id/girl_image"
                        android:src="@drawable/girl"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/girltext"
                        android:background="#1A000000"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:layout_below="@+id/girl_image"
                        android:text="မိန်းကလေးအဝတ်အစား"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>