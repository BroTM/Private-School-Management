<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/add_new_layout"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="@color/colorPrimary"
            android:id="@+id/user_registration_tool"/>
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/add_new_layout"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/reslogo"
                    android:src="@drawable/logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/restitle"
                    android:text="ကျောင်းဝင်ခွင့်ပုံစံ"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@+id/reslogo"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resname"
                    android:layout_marginTop="10dp"
                    android:text="ကျောင်းသားအမည်"
                    android:layout_below="@+id/restitle"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/studentname"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:background="@drawable/textfielddesign"
                    android:layout_below="@+id/resname"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/respassclass"
                    android:layout_marginTop="10dp"
                    android:text="အောင်မြင်ထားသောအတန်း"
                    android:layout_below="@+id/studentname"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerPassed1"
                    android:layout_below="@+id/respassclass"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/textfielddesign">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/spinnerPassed"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"

                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resattclass"
                    android:layout_marginTop="10dp"
                    android:text="တတ်ရောက်နိုင်သောအတန်း"
                    android:layout_below="@+id/spinnerPassed1"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:text="သူငယ်တန်း"
                    android:textColor="@color/bold"
                    android:paddingTop="12dp"
                    android:id="@+id/student_Attend_Class"
                    android:background="@drawable/textfielddesign"
                    android:paddingLeft="15dp"
                    android:layout_below="@+id/resattclass"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resfather"
                    android:layout_marginTop="10dp"
                    android:text="ဖခင်အမည်"
                    android:layout_below="@+id/student_Attend_Class"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/studentfathername"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/resfather"
                    android:background="@drawable/textfielddesign"
                    android:paddingLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resfathernrc"
                    android:layout_marginTop="10dp"
                    android:text="ဖခင်မှတ်ပုံတင်အမှတ်"
                    android:layout_below="@+id/studentfathername"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:id="@+id/father_nrc_no"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/resfathernrc"
                    android:background="@drawable/textfielddesign"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resmother"
                    android:layout_marginTop="10dp"
                    android:text="မိခင်အမည်"
                    android:layout_below="@+id/father_nrc_no"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/mother_name"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:layout_below="@+id/resmother"
                    android:background="@drawable/textfielddesign"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resmothernrc"
                    android:layout_marginTop="10dp"
                    android:text="မိခင်မှတ်ပုံတင်အမှတ်"
                    android:layout_below="@+id/mother_name"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/mother_nrc_no"
                    android:layout_marginLeft="25dp"
                    android:singleLine="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/resmothernrc"
                    android:background="@drawable/textfielddesign"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:text="နေရပ်လိပ်စာ"
                    android:layout_below="@+id/mother_nrc_no"
                    android:id="@+id/textAddress"/>
                <EditText
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/textfielddesign"
                    android:paddingLeft="15dp"
                    android:id="@+id/student_address"
                    android:layout_below="@+id/textAddress"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resbirth"
                    android:layout_marginTop="10dp"
                    android:text="မွေးနေ့"
                    android:layout_below="@+id/student_address"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:id="@+id/edit_stu_birth"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/resbirth"
                    android:background="@drawable/textfielddesign"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ph_no"
                    android:layout_marginTop="10dp"
                    android:text="ဖုန်းနံပါတ်"
                    android:layout_below="@+id/edit_stu_birth"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/edit_ph_no"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_ph_no"
                    android:background="@drawable/textfielddesign"
                    android:paddingLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resattform"
                    android:layout_marginTop="10dp"
                    android:text="တတ်ရောက်မည့်သင်တန်းပုံစံ"
                    android:layout_below="@+id/edit_ph_no"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/resattform"
                    android:id="@+id/spinner_attend_Form1"
                    android:background="@drawable/textfielddesign"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/spinner_attend_Form"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="0dp"
                        android:layout_below="@+id/resattform"
                        android:paddingLeft="15dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rescost"
                    android:layout_marginTop="10dp"
                    android:text="ကျောင်းလခ"
                    android:layout_below="@+id/spinner_attend_Form1"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_cost"
                    android:text="၁၅သိန်း"
                    android:layout_marginLeft="35dp"
                    android:layout_below="@+id/rescost"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resimage"
                    android:layout_marginTop="10dp"
                    android:text="ကျောင်းသားဓာတ်ပုံ"
                    android:layout_below="@+id/tv_cost"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnchoose"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gallery"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/resimage"
                    android:background="@drawable/textfielddesign"
                    android:padding="15dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/restcimage"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_cost"
                    android:text="ကျောင်းပြောင်းလက်မှတ်"
                    android:layout_toRightOf="@+id/resimage"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/tvrestcimage"
                    android:src="@drawable/gallery"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/restcimage"
                    android:layout_toRightOf="@+id/btnchoose"
                    android:background="@drawable/textfielddesign"
                    android:padding="15dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSend"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvrestcimage"
                    android:text="တင်မည်"
                    android:textColor="@color/textcolor"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/buttondesign"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonCancel"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvrestcimage"
                    android:text="ပယ်ဖျက်မည်"
                    android:textColor="@color/textcolor"
                    android:layout_toRightOf="@+id/btnSend"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/buttondesign"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>