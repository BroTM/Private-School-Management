<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/card_background"
    android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/continue_reading_toolbar"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="4dp"
        android:layout_below="@+id/continue_reading_toolbar"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/continue_edit_event_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/edit" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:id="@+id/continue_time_all">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/continue_activity_date"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/timecolor"
                    android:text="7 Oct at " />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="at"
                    android:textColor="@color/timecolor"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/timecolor"
                    android:text="3:30"
                    android:id="@+id/continue_activity_time"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/img_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/continue_time_all">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/continue_activity_image"
                    android:src="@drawable/u"
                    android:scaleType="fitXY"
                    android:layout_marginTop="16dp"
                    android:padding="0dp"/>

                <ProgressBar
                    android:id="@+id/continue_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/continue_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_refresh_icon"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/continue_text_about"
                    android:paddingTop="8dp"
                    android:background="@color/event_background"
                    android:text="activity_about"
                    android:textAlignment="center"
                    android:textColor="@color/event_title"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/continue_descripiton"
                android:text="activity_about"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:layout_below="@+id/img_layout"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>